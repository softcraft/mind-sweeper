<!DOCTYPE html>
<html>
  <head>
    <title>Mochihua</title>
    
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/themes/base/jquery-ui.css" type="text/css" media="all" />
    <link rel="stylesheet" href="http://static.jquery.com/ui/css/demo-docs-theme/ui.theme.css" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans|Raleway:100' rel='stylesheet' type='text/css' />

    <meta charset="utf-8" />
  </head>
  
  <body>
    <a class="reload" href=""></a>
    <form action="api/login" id="login_form">
      <section>
        <label> Usuario:</label>
        <input type="text" name="username" />
      </section>
      <section>
        <label> Password:</label>
        <input type="password" name="password" />
      </section>
      <section id="login-button">
        <button id="login"><img src="images/key.png"></button>
      </section>
    </form>

    <form action="" id="new_idea"> 
      <textarea cols="40" rows="2" name="post[description]" id="description" maxlength="140"></textarea>
      <button id="collect"><img src="images/edit.png"></button>
    </form>

    <section id="ideas_">
      <h1></h1>
      <ol id="ideas">
      </ol>
    </section>

    <script id="idea" type="text/html">
      <li class="idea">
        <article> 
          <div class="content_wrapper">
            <div class="content">
              {{description}}
            </div>
            <div class="date">
            {{datetime}}
            </div>
          </div>
          <footer>
             {{#_links.do.href}}
               <button id="do" data-action="{{_links.do.href}}"><img src="images/play.png"></button>
             {{/_links.do.href}}
             {{^_links.do.href}}
               <button id="complete" data-action="{{_links.delete.href}}"><img src="images/check.png"></button>
             {{/_links.do.href}}
             {{#_links.review.href}}
             <button id="review" data-action="{{_links.review.href}}"><img src="images/arrow.png"></button>
             {{/_links.review.href}}
             {{#_links.schedule.href}}
               <input id="date" />
               <button id="schedule" data-action="{{_links.schedule.href}}"><img src="images/calendar.png"></button>
             {{/_links.schedule.href}}
            <button id="delete" data-action="{{_links.delete.href}}"><img src="images/trash-can.png"></button>
          </footer>
        </article>
      </li>
    </script>

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"></script>
    <script type="text/javascript" src="https://rawgithub.com/trentrichardson/jQuery-Timepicker-Addon/master/jquery-ui-timepicker-addon.js"></script>
    <script type="text/javascript" src="//rawgithub.com/HenrikJoreteg/ICanHaz.js/master/ICanHaz.min.js"></script>
    <script type="text/javascript" src="http://ejohn.org/files/pretty.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
  </body>
</html>
